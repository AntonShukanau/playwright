{
  "name": "@qavajs/steps-playwright",
  "version": "0.1.0",
  "description": "steps to interact with playwright",
  "main": "./index.js",
  "scripts": {
    "build": "tsc",
    "test": "vitest --coverage run",
    "start:server": "ts-node test-e2e/support/server.ts",
    "install:browsers": "playwright install",
    "debug:e2e": "playwright test --config test-e2e/playwright.config.ts --ui",
    "test:e2e": "playwright test --config test-e2e/playwright.config.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qavajs/playwright.git"
  },
  "authors": [
    "Alexandr Galichenko"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qavajs/steps-playwright/issues"
  },
  "homepage": "https://github.com/qavajs/steps-playwright#readme",
  "devDependencies": {
    "@cucumber/cucumber": "^10.7.0",
    "@qavajs/memory": "^1.7.0",
    "@qavajs/playwright-runner-adapter": "^0.2.0",
    "@qavajs/po-playwright": "^0.15.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "express": "^4.19.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@playwright/test": "^1.44.0"
  }
